openapi: 3.0.0
info:
  title: ElevenLabs Proxy API
  version: 1.0.0
paths:
  /api/speak:
    post:
      summary: Convert text to speech using ElevenLabs custom voice
      operationId: speak
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                text:
                  type: string
                  example: "Hello from Shindy custom voice!"
      responses:
        '200':
          description: MP3 audio output
          content:
            audio/mpeg:
              schema:
                type: string
                format: binary
servers:
  - url: https://elevenlabs-proxy-git-main-dmshins-projects.vercel.app
