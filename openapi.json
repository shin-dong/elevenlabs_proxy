{
  "openapi": "3.0.0",
  "info": {
    "title": "ElevenLabs Proxy API",
    "description": "API to synthesize speech using ElevenLabs custom voice.",
    "version": "1.0.0"
  },
  "paths": {
    "/api/speak": {
      "post": {
        "summary": "Synthesize speech from text",
        "operationId": "synthesizeSpeech",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "The text to be converted to speech"
                  }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful voice synthesis",
            "content": {
              "audio/mpeg": {}
            }
          },
          "400": {
            "description": "Missing or invalid text"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
